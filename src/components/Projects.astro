---
import ReactjsIco from "../icons/ReactjsIco.astro";
import TailwindIco from "../icons/TailwindIco.astro";
import FirebaseIco from "../icons/FirebaseIco.astro";
import SocialPill from "./SocialPill.astro";

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-blue-900 text-white",
    icon: ReactjsIco,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-sky-900 text-white",
    icon: TailwindIco,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-red-900 text-white",
    icon: FirebaseIco,
  },
};

const PROJECTS = [
  {
    title: "Seprenchat",
    description:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec purus nec nisl lacinia ultrices. Nullam nec purus nec nisl lacinia ultrices.",
    link: "https://seprenchat.vercel.app",
    github: "https://github.com/pedromocco/seprenchat",
    image: "/projects/seprenchat.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.FIREBASE],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image, link, github }) => (
    <div class="max-w bg-blue-500/20 border border-gray-200/20 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
      <a href="#">
        <img class="rounded-t-lg" src={image} alt={title} />
      </a>
      <div class="p-5">
        <h5 class="flex  gap-x-4 items-center mb-2 text-2xl font-bold tracking-tight text-white dark:text-white">
          {title}
          {tags.map((tag) => (
            <li
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} p-1 mb-4`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </li>
          ))}
        </h5>

        <p class="mb-3 font-normal text-white dark:text-gray-400">
          {description}
        </p>

        <div class="flex gap-x-4 mt-4">
          <a
            class="rounded-full bg-black/30 
          border border-white/20
          flex justify-center items-center 
          gap-x-2 
          px-4 py-1 
          text-xs lg:text-base
          hover:scale-105
          hover:bg-black transition"
            target="_blank"
            rel="noopener"
            href={github}
          >
            Github
          </a>
          <a
            class="rounded-full bg-red-900/50
          border border-white/20
          flex justify-center items-center 
          gap-x-2 
          px-4 py-1 
          text-xs lg:text-base
          hover:scale-105
          hover:bg-red-900/90 transition"
            target="_blank"
            rel="noopener"
            href={link}
          >
            Link
          </a>
        </div>
      </div>
    </div>
  ))
}

