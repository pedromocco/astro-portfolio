---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import LinkedinIco from "../icons/LinkedinIco.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIco from "../icons/GithubIco.astro";
import MailIco from "../icons/MailIco.astro";
import DocumentIco from "../icons/DocumentIco.astro";
import SuitcaseIco from "../icons/SuitcaseIco.astro";
import ReactIco from "../icons/ReactIco.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import About from "../components/About.astro";
import Skills from "../components/Skills.astro";
import Contact from "../components/Contact.astro";
import TieIco from "../icons/TieIco.astro";
import LaptopIco from "../icons/LaptopIco.astro";
import ContactIco from "../icons/ContactIco.astro";
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <main class="px-4">
    <Container class="py-60 pb-64">
      <h1
        class="text-white text-3xl lg:text-5xl font-bold flex gap-x-4 pb-4 opacity-80"
      >
        Hola! Soy Pedro Mocc√≥ <div class="flex justify-center items-center">
          <Badge color="green">Abierto a trabajar</Badge>
        </div>
      </h1>
      <h2 class="text-xl lg:text-2xl opacity-80 text-pretty">
        Desarrollador Front-End Venezuela especializado en <span
          class="font-bold text-blue-500">React</span
        >, desarrollo visual y en resiliencia.
      </h2>
      <p class="text-sm opacity-60 mt-4 text-pretty">
        Determinado a enfrentar cualquier desafio y emocionado por poder
        contribuir a soluciones tecnologicas
      </p>

      <nav class="flex flex-wrap gap-4 mt-8">
        <SocialPill href="https://www.linkedin.com/in/pedromocco/">
          <LinkedinIco class="size-4 lg:size-6" />
          Linkedin
        </SocialPill>
        <SocialPill href="https://www.github.com/pedromocco/">
          <GithubIco class="size-4 lg:size-6" />
          Github
        </SocialPill>
        <SocialPill href="">
          <MailIco class="size-4 lg:size-6" />
          Correo
        </SocialPill>
        <SocialPill href="">
          <DocumentIco class="size-4 lg:size-6" />
          CV
        </SocialPill>
      </nav>
    </Container>
    <Container id="experience">
      <h2 class="text-3xl font-bold mb-6 flex gap-x-2 items-center">
        <SuitcaseIco class="size-10" />Experiencia
      </h2>
      <Experience />
    </Container>
    <Container id="projects">
      <h2 class="text-3xl font-bold mb-6 flex gap-x-2 items-center">
        <ReactIco class="size-10" />Proyectos
      </h2>
      <Projects />
    </Container>
    <Container id="about">
      <h2 class="text-3xl font-bold mb-6 flex gap-x-2 items-center">
        <TieIco class="size-10" /> Sobre mi
      </h2>
      <About />
    </Container>
    <Container id="skills">
      <h2 class="text-3xl font-bold mb-6 flex gap-x-2 items-center">
        <LaptopIco class="size-10" /> Habilidades
      </h2>
      <Skills />
    </Container>
    <Container id="contac">
      <h2 class="text-3xl font-bold mb-6 flex gap-x-2 items-center">
        <ContactIco class="size-10" /> Contacto
      </h2>
      <Contact />
    </Container>
  </main>
</Layout>
